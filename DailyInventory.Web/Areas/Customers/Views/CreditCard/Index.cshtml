@model IEnumerable<DailyInventory.Models.Models.CreditCard>

@{
    ViewData["Title"] = "Credit Cards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card boxShadow shadow">
        <div class="card-header d-flex justify-content-between align-items-center text-bg-light MorpheusDen">
            <h2>Credit Cards</h2>
            <a asp-action="Create" class="btn btn-primary data-mdb-ripple-init">Add New Credit Card</a>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-light table-hover table-group-divider">
                <thead class="table-secondary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().BankName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().CreditCardDescription)</th>
                        <th>@Html.DisplayNameFor(model => model.First().CreditCardHolderName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().CreditCardNo)</th>
                        <th>@Html.DisplayNameFor(model => model.First().CreditCardType)</th>
                        <th>@Html.DisplayNameFor(model => model.First().CustomerId)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider text-nowrap">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.BankName)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreditCardDescription)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreditCardHolderName)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreditCardNo)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreditCardType)</td>
                            <td>@Html.DisplayFor(modelItem => item.CustomerId)</td>
                            <td class="d-md-flex justify-content-md-evenly">
                                <a asp-action="Edit" asp-route-id="@item.BankName" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.CreditCardHolderName" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-end bg-secondary bg-gradient">
            <a href="#" class="btn btn-primary" data-mdb-ripple-init>Go somewhere</a>
        </div>
    </div>
</div>
